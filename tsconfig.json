{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "sourceMap": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "allowJs": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "esModuleInterop": true
  },
  "include": ["src"]
}
